  "main": "./.dist/src/index.js",
  "scripts": {
    "lint": "eslint . --cache --ext .js,.ts",
    "build": "npx tsc",
    "run": "npx tsc && node .dist/src/",
    "start": "npx tsc && npx pm2 start config/pm2.js",
